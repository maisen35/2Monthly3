<table class="table table-hover table-inverse">
  <% if @range == "User" %>
    <h2>Users search for <%= @word %></h2>
    <tbody>
      <tr>
        <td>image</td>
        <td>name</td>
        <td>introduction</td>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size: "50x50" %></td>
          <td><%= user.name %></td>
          <td><%= user.introduction %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <h2>Books search for <%= @word %></h2>
    <tbody>
      <tr>
        <td>title</td>
        <td>opnion</td>
      </tr>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>