<table class="table">
  <% book.book_comments.each do |book_comment| %>
  <thead>
    <tr>
      <td><%= image_tag book_comment.user.get_profile_image, size:'40x40' %></td>
      <td><%= book_comment.user.name %></td>
      <td><%= book_comment.comment %></td>
      <% if book_comment.user == current_user %>
        <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true %></td>
      <% end %>
    </tr>
  </thead>
  <% end %>
</table>